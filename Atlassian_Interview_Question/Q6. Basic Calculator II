


Leetcode Link : https://leetcode.com/problems/basic-calculator-ii/description/


class Solution {
    public int calculate(String s) {

        int len = s.length();
        int num=0;
        char operator='+';
        Stack<Integer>st = new Stack<>();

        for(int i=0;i<len;i++){

            char ch = s.charAt(i);
            if( Character.isDigit(ch))
            {
                num = num*10 +(ch-'0');
            }

            if(isOperator(ch)  || i==len-1){
                if(operator=='+')
                st.push(num);

                else if(operator=='-')
                st.push(-num);

                else if(operator =='*' )
                st.push(st.pop() * num);

                else if(operator =='/')
                st.push(st.pop() / num);

                num = 0;
                operator = ch;
        }
        }

        int ans=0;
        while(!st.isEmpty())
        ans+=st.pop();

        return ans;
        
    }

      private boolean isOperator(char c) {
        return c == '+' || c == '-' || c == '*' || c == '/';
    }
}                    
